@model BugTracking.Models.AspNetUserRole



<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Assign Role </h5>
            </div>
            <div class="ibox-content">

                @using (Html.BeginForm("AssignRole", "User", FormMethod.Post, new { role = "form", @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="hr-line-dashed"></div>
                    <div class="form-group">


                        @Html.LabelFor(model => model.UserId, "User", new { @class = "col-sm-2 control-label" })

                        <div class="col-sm-10">
                            <div class="row">
                                <div class="col-md-3">
                                    @Html.DropDownList("UserId", null, htmlAttributes: new { @class = "form-control" })
                                
                                </div>
                            </div>
                        </div>
                    </div>



                    <div class="hr-line-dashed"></div>
                    <div class="form-group">


                        @Html.LabelFor(model => model.RoleId, "Role", new { @class = "col-sm-2 control-label" })

                        <div class="col-sm-10">
                            <div class="row">
                                <div class="col-md-3">
                                    @Html.DropDownList("RoleId", null, htmlAttributes: new { @class = "form-control" })
                                 
                                </div>
                            </div>
                        </div>
                    </div>



                    <div class="hr-line-dashed"></div>
                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-2">
                            <a class="btn btn-secondary" href="/User/RoleList" role="button">Cancel</a>
                            <button class="btn btn-primary" type="submit">Assign Role</button>
                        </div>
                    </div>
                }




            </div>
        </div>
    </div>
</div>

