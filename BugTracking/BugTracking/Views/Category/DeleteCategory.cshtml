@model BugTracking.Models.Category



<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Delete Category </h5>
            </div>
            <div class="ibox-content">

                @using (Html.BeginForm("DeleteCategory", "Category", FormMethod.Post, new { role = "form", @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary("", new { @class = "text-danger" })

                    <div class="hr-line-dashed"></div>
                    <div class="form-group">


                        @Html.LabelFor(model => model.Name, "Category Name", new { @class = "col-sm-2 control-label" })

                        <div class="col-sm-10">
                            <div class="row">
                                <div class="col-md-3">@Html.TextBoxFor(model => model.Name, new { @class = "form-control", @readonly = true })</div>
                            </div>
                        </div>
                    </div>


                    <div class="hr-line-dashed"></div>
                    <div class="form-group">


                        @Html.LabelFor(model => model.Description, "Description", new { @class = "col-sm-2 control-label" })

                        <div class="col-sm-10">
                            <div class="row">
                                <div class="col-md-3">@Html.TextBoxFor(model => model.Description, new { @class = "form-control", @readonly = true })</div>
                            </div>
                        </div>
                    </div>


                    <div class="hr-line-dashed"></div>
                    <div class="form-group">


                        @Html.LabelFor(model => model.Section, "Section", new { @class = "col-sm-2 control-label" })

                        <div class="col-sm-10">
                            <div class="row">
                                <div class="col-md-3">@Html.DropDownList("Section", null, htmlAttributes: new { @class = "form-control", @disabled = "disabled" })</div>
                            </div>
                        </div>
                    </div>



                    <div class="hr-line-dashed"></div>

                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-2">

                            <a class="btn btn-secondary" href="/Category/CategoryList" role="button">Cancel</a>
                            <button class="btn btn-primary" type="submit">Delete Category</button>

                        </div>
                    </div>
                }




            </div>
        </div>
    </div>
</div>
