@model BugTracking.Models.RegisterViewModel

<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Register New User </h5>
            </div>
            <div class="ibox-content">

                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form", @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()
                  
                    @Html.ValidationSummary("", new { @class = "text-danger" })

                    <div class="hr-line-dashed"></div>
                    <div class="form-group">



                        @Html.LabelFor(model => model.FirstName, "First Name", new { @class = "col-sm-2 control-label" })

                        <div class="col-sm-10">
                            <div class="row">
                                <div class="col-md-3">@Html.TextBoxFor(model => model.FirstName, new { @class = "form-control", @placeholder = "First Name" })</div>
                            </div>
                        </div>
                    </div>

                    <div class="hr-line-dashed"></div>
                    <div class="form-group">



                        @Html.LabelFor(model => model.LastName, "Last Name", new { @class = "col-sm-2 control-label" })

                        <div class="col-sm-10">
                            <div class="row">
                                <div class="col-md-3">@Html.TextBoxFor(model => model.LastName, new { @class = "form-control", @placeholder = "Last Name" })</div>
                            </div>
                        </div>
                    </div>


                    <div class="hr-line-dashed"></div>
                    <div class="form-group">


                        @Html.LabelFor(model => model.Email, "Email", new { @class = "col-sm-2 control-label" })

                        <div class="col-sm-10">
                            <div class="row">
                                <div class="col-md-3">@Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Enter Email" })</div>
                            </div>
                        </div>
                    </div>

                    <div class="hr-line-dashed"></div>
                    <div class="form-group">




                        @Html.LabelFor(model => model.TelephoneNumber, "Telephone Number", new { @class = "col-sm-2 control-label" })

                        <div class="col-sm-10">
                            <div class="row">
                                <div class="col-md-3">@Html.TextBoxFor(model => model.TelephoneNumber, new { @class = "form-control", @placeholder = "Telephone Number" })</div>
                            </div>
                        </div>
                    </div>



                        <div class="hr-line-dashed"></div>
                        <div class="form-group">


                            @Html.LabelFor(model => model.OrganizationID, "Organization", new { @class = "col-sm-2 control-label" })

                            <div class="col-sm-10">
                                <div class="row">
                                    <div class="col-md-3">
                                        @Html.DropDownList("OrganizationID", null, htmlAttributes: new { @class = "form-control" })

                                    </div>
                                </div>
                            </div>
                        </div>



                        <div class="hr-line-dashed"></div>
                        <div class="form-group">


                            @Html.LabelFor(model => model.RoleId, "Role", new { @class = "col-sm-2 control-label" })

                            <div class="col-sm-10">
                                <div class="row">
                                    <div class="col-md-3">
                                        @Html.DropDownList("RoleId", null, htmlAttributes: new { @class = "form-control" })

                                    </div>
                                </div>
                            </div>
                        </div>




                        <div class="hr-line-dashed"></div>
                        <div class="form-group">


                            @Html.LabelFor(model => model.Password, "Password", new { @class = "col-sm-2 control-label" })

                            <div class="col-sm-10">
                                <div class="row">
                                    <div class="col-md-3">@Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = "Enter Password" })</div>
                                </div>
                            </div>
                        </div>



                    <div class="hr-line-dashed"></div>
                    <div class="form-group">


                        @Html.LabelFor(model => model.ConfirmPassword, "Confirm Password", new { @class = "col-sm-2 control-label" })

                        <div class="col-sm-10">
                            <div class="row">
                                <div class="col-md-3">@Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control", @placeholder = "Enter Password" })</div>
                            </div>
                        </div>
                    </div>


                    <div class="hr-line-dashed"></div>
                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-2">
                            <a class="btn btn-secondary" href="/User/UserList" role="button">Cancel</a>
                            <button class="btn btn-primary" type="submit">Create User</button>
                        </div>
                    </div>
                }




            </div>
        </div>
    </div>
</div>

