@model BugTracking.Models.Product



<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Create New Product </h5>
            </div>
            <div class="ibox-content">


                @using (Html.BeginForm("CreateProduct", "Product", FormMethod.Post, new { role = "form", @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })

                    <div class="hr-line-dashed"></div>
                    <div class="form-group">


                        @Html.LabelFor(model => model.Name_Prod, "Product Name", new { @class = "col-sm-2 control-label" })

                        <div class="col-sm-10">
                            <div class="row">
                                <div class="col-md-3">@Html.EditorFor(model => model.Name_Prod, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Product" } })</div>
                            </div>
                        </div>
                    </div>

                    <div class="hr-line-dashed"></div>
                    <div class="form-group">


                        @Html.LabelFor(model => model.Description_Prod, "Product Description", new { @class = "col-sm-2 control-label" })

                        <div class="col-sm-10">
                            <div class="row">
                                <div class="col-md-3">@Html.EditorFor(model => model.Description_Prod, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Description" } })</div>
                            </div>
                        </div>
                    </div>




                    <div class="hr-line-dashed"></div>
                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-2">
                            <a class="btn btn-secondary" href="/Product/ProductList" role="button">Cancel</a>
                            <button class="btn btn-primary" type="submit">Add Product</button>
                        </div>
                    </div>
                }




            </div>
        </div>
    </div>
</div>

