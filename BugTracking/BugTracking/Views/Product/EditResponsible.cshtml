@model BugTracking.Models.Responsible



<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Edit Responsible Person </h5>
            </div>
            <div class="ibox-content">

                @using (Html.BeginForm("EditResponsible", "Product", FormMethod.Post, new { role = "form", @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.ID)
                    @Html.HiddenFor(model => model.Active )

                    <div class="hr-line-dashed"></div>
                    <div class="form-group">


                        @Html.LabelFor(model => model.ID_User, "User", new { @class = "col-sm-2 control-label" })

                        <div class="col-sm-10">
                            <div class="row">
                                <div class="col-md-3">
                                    @Html.DropDownList("ID_User", null, htmlAttributes: new { @class = "form-control" })
                                  
                                </div>
                            </div>
                        </div>
                    </div>



                    <div class="hr-line-dashed"></div>
                    <div class="form-group">


                        @Html.LabelFor(model => model.ID_Product, "Product", new { @class = "col-sm-2 control-label" })

                        <div class="col-sm-10">
                            <div class="row">
                                <div class="col-md-3">
                                    @Html.DropDownList("ID_Product", null, htmlAttributes: new { @class = "form-control" })
                                   
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="hr-line-dashed"></div>
                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-2">
                            <a class="btn btn-secondary" href="/Product/ProductResponsibleList" role="button">Cancel</a>
                            <button class="btn btn-primary" type="submit">Save Changes</button>
                        </div>
                    </div>
                }




            </div>
        </div>
    </div>
</div>

