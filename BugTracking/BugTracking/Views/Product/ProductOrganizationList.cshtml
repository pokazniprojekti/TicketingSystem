@model IEnumerable<BugTracking.Models.ProductOrganisation>

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-12">
        <h2>Products and Organizations </h2>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">

            <div class="ibox-content">

                <a class="btn btn-primary" href=@Url.Action("AssignOrganisation", "Product") role="button">New</a>

                <table class="table table-hover">
                    <thead>
                        <tr>

                            <th>@Html.DisplayNameFor(model => model.Product.Name_Prod)</th>
                            <th>@Html.DisplayNameFor(model => model.Product.Description_Prod)</th>
                            <th>@Html.DisplayNameFor(model => model.Organization.Name)</th>
                            <th>@Html.DisplayNameFor(model => model.Organization.Location)</th>
                            <th>@Html.DisplayNameFor(model => model.Organization.TelephoneNumber)</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>


                                <td>@Html.DisplayFor(modelItem => item.Product.Name_Prod)</td>
                                <td>@Html.DisplayFor(modelItem => item.Product.Description_Prod)</td>
                                <td>@Html.DisplayFor(modelItem => item.Organization.Name)</td>
                                <td>@Html.DisplayFor(modelItem => item.Organization.Location)</td>
                                <td>@Html.DisplayFor(modelItem => item.Organization.TelephoneNumber)</td>
                                <td class="text-navy">
                                    <a href=@Url.Action("EditOrganization", "Product", new {id=item.ID})><i class="fa fa-cog"></i></a>
                                    <a href=@Url.Action("DeleteOrganization", "Product", new {id=item.ID})><i class="fa fa-trash"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>